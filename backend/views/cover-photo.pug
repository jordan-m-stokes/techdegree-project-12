.cover-photo-background
    img(src=post.coverPhoto.links.medium alt="")
//- img.cover-photo-background(src=post.coverPhoto.links.original alt="" styles='display: none')

script.
    function loadSmoothly()
    {
        const originalSrc = "#{post.coverPhoto.links.original}";

        const element = document.querySelector(".cover-photo-background");

        let image = document.images[0];
        let originalImage = document.createElement("img");

        originalImage.onload = function()
        {
            image.src = this.src;

            element.style.animation = "unblur 1.5s 0.5s forwards";
        }

        originalImage.src = originalSrc;
    }

    loadSmoothly();



    
